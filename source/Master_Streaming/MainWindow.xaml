<Window x:Class="Master_Streaming.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Master_Streaming"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">


    <Window.Resources>

        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style TargetType="Image">
            <Setter Property="Width" Value="250"/>
        </Style>

        <Thickness x:Key="espacement" Top="0" Left="0" Right="15" Bottom="10"/>
        <Thickness x:Key="espacementGenre" Top="0" Left="0" Right="0" Bottom="10"/>
        
    </Window.Resources>

    <StackPanel Background="#313131">
        <StackPanel Background="#313131">
            <local:UC_header/>
        </StackPanel>



        <Border Padding="10 15 0 0" Margin="0 20 0 0">
            <local:UC_listeSeries Loaded="UC_listeSeries_Loaded"></local:UC_listeSeries>
        </Border>
        
        <Border Padding="10 15 0 0" Margin="0 20 0 0">
            <local:UC_listeSeries></local:UC_listeSeries>
            
        </Border>
    </StackPanel>
    
</Window>
