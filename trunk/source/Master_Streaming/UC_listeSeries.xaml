<UserControl x:Class="Master_Streaming.UC_listeSeries"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Master_Streaming"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style TargetType="Image">
            <Setter Property="Width" Value="250"/>
        </Style>

        <Thickness x:Key="espacement" Top="0" Left="0" Right="15" Bottom="0"/>

    </UserControl.Resources>

    <StackPanel Orientation="Vertical">
        <TextBlock>Drame</TextBlock>
            <ListBox  SelectedIndex="0" Background="#313131" BorderBrush="#313131">
        <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
            </ItemsPanelTemplate>
        </ListBox.ItemsPanel>

            <StackPanel Margin="{StaticResource espacement}">
                <Image Source="Enola Holmes.jpg"/>
                <TextBlock HorizontalAlignment="center">Enola Holmes</TextBlock>
            </StackPanel>

            <StackPanel Margin="{StaticResource espacement}">
                <Image Source="La mission.jpg"/>
                <TextBlock HorizontalAlignment="center">La Mission</TextBlock>
            </StackPanel>

            <StackPanel Margin="{StaticResource espacement}">
                <Image Source="Des vies froissees.jpg"/>
                <TextBlock HorizontalAlignment="center">Des vies froissées</TextBlock>
            </StackPanel>

            <StackPanel Margin="{StaticResource espacement}">
                <Image Source="Notre ete.jpg"/>
                <TextBlock HorizontalAlignment="center">Notre été</TextBlock>
            </StackPanel>


        </ListBox>
</StackPanel>
    
</UserControl>
